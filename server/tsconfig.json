{
  "compilerOptions": {
    "types": ["node"],
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
